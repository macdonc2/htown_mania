# ============================================
# Houston Event Mania - Environment Variables
# ============================================
# Copy this file to .env and populate with your actual values
# All variables are prefixed with EVENTS_ (see app/config/settings.py)

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection URL for async SQLAlchemy
# Format: postgresql+asyncpg://user:password@host:port/database
EVENTS_database_url=postgresql+asyncpg://user:password@localhost:5432/htown_mania

# ============================================
# OpenAI Configuration
# ============================================
# OpenAI API key for event summarization
EVENTS_openai_api_key=sk-your-openai-api-key-here

# OpenAI model to use (default: gpt-5-mini)
EVENTS_openai_model=gpt-5-mini

# OpenAI temperature for response creativity (0.0-2.0, default: 1.0)
# Lower = more focused/deterministic, Higher = more creative/random
# For wrestling promos, try 1.2-1.5 for extra MADNESS!
EVENTS_openai_temperature=1.0

# ============================================
# Event Discovery API Keys (Optional)
# ============================================
# Get comprehensive event coverage with these APIs

# SerpAPI (RECOMMENDED): https://serpapi.com/users/sign_up?plan=free
# Scrapes Google Events - aggregates from ALL sources (Eventbrite, Ticketmaster, etc.)
# FREE TIER: 100 searches/month (more than enough for daily runs!)
EVENTS_serpapi_key=

# Ticketmaster API: https://developer.ticketmaster.com/
# Backup source for major events (concerts, sports, theater)
EVENTS_ticketmaster_api_key=

# Meetup API: https://www.meetup.com/api/
# Community events (EXPENSIVE - not recommended)
EVENTS_meetup_api_key=

# Eventbrite API: DEPRECATED - removed from system
# EVENTS_eventbrite_api_key=

# ============================================
# Twilio SMS Configuration
# ============================================
# Twilio account credentials for sending SMS notifications
EVENTS_twilio_account_sid=your-twilio-account-sid
EVENTS_twilio_auth_token=your-twilio-auth-token
EVENTS_twilio_from_number=+1234567890

# Phone number to receive SMS notifications
EVENTS_sms_recipient=+1234567890

# Set to 1 to mute SMS in development (default: 0)
EVENTS_dev_sms_mute=0

# ============================================
# Google OAuth Configuration
# ============================================
# Google OAuth credentials for authentication
# Leave empty if not using Google OAuth
EVENTS_google_client_id=your-google-client-id.apps.googleusercontent.com
EVENTS_google_client_secret=your-google-client-secret

# Comma-separated list of allowed email addresses for authentication
# Example: user1@example.com,user2@example.com
EVENTS_allowed_emails=your-email@example.com

# ============================================
# Session Configuration
# ============================================
# Secret key for session signing (generate a strong random string)
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
EVENTS_session_secret=your-random-session-secret-change-this

# Session cookie name (default: event_mania_session)
EVENTS_session_cookie_name=event_mania_session

# Session lifetime in days (default: 7)
EVENTS_session_lifetime_days=7

# ============================================
# Application Configuration
# ============================================
# Base URL for the application (used for OAuth redirects, etc.)
EVENTS_app_base_url=http://localhost:8000

# Frontend rendering mode: html or neon (default: html)
EVENTS_frontend_mode=html

